<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="per.wei.cloud.dao.daomapper.SysUserMapper">
	<resultMap id="UserRole" type="per.wei.cloud.dao.daoentity.SysUser">
		<result property="username" column="username" />
		<result property="name" column="name" />
		<association property="sysRoles" javaType="per.wei.cloud.dao.daoentity.SysRole">
			<result property="rolename" column="rolename"></result>
		</association>
	</resultMap>
    <select id="getUserRole" resultMap="UserRole">
        SELECT
			u.username,
			u.name,
			r.rolename
		FROM
			( sys_user u LEFT JOIN sys_user_role_pk p ON p.user_id = u.user_id )
			LEFT JOIN sys_role r ON p.role_id = r.id
    </select>
</mapper>
